{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["*.ts", "tasks/**/*.ts", "../../custom-typings/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
